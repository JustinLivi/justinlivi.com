{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "preserve",
    "baseUrl": "./src",
  },
  "include": [
    "src", "@types"
  ],
  "files": [
    "custom.d.ts"
  ]
}
